		<ImplicitUsings>enable</ImplicitUsings>
		<AotAssemblies>true</AotAssemblies>
		<SupportedOSPlatformVersion>8.0</SupportedOSPlatformVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="GuerrillaNtp" Version="3.1.0" />
